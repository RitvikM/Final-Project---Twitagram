<body background='<%= asset_path 'mainback.png' %>'>

<h1> All Users </h1>

<br><br><br>

    <div id="users">  
      <% @users.each do |user| %>  
    <div id="user">  
          <% if user.username != current_user.username %>  
            <%=h user.username %>  
            <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>  
          <% end %>  
        </div>  
      
      <% end %>  
	  
    </div>  


